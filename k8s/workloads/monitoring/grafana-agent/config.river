logging {
  level  = "info"
  format = "logfmt"
}

discovery.kubernetes "services_logs" {
  role = "service"

  selectors {
    role  = "service"
    label = "grafana-agent/collect-logs"
  }
}

loki.source.kubernetes "logs" {
  targets = discovery.kubernets.services_logs.targets
  forward_to = [loki.write.local.receiver]
}

loki.write "local" {
  endpoint {
    url = "http://loki-gateway.monitoring.svc.cluster.local"
  }
}
