logging {
  level  = "debug"
  format = "logfmt"
}

// Discovery
// ---------
discovery.kubernetes "pods" {
  role = "pod"
}

discovery.relabel "common" {
  targets = discovery.kubernetes.pods.targets

  rule {
    source_labels = ["__meta_kubernetes_namespace"]
    action = "replace"
    target_label = "namespace"
  }
  rule {
    source_labels = ["__meta_kubernetes_namespace", "__meta_kubernetes_pod_container_name"]
    separator = "/"
    action = "replace"
    target_label = "job"
  }
  rule {
    source_labels = ["__meta_kubernetes_pod_name"]
    action = "replace"
    target_label = "pod"
  }
  rule {
    source_labels = ["__meta_kubernetes_pod_node_name"]
    action = "replace"
    target_label = "instance"
  }
  rule {
    source_labels = ["__meta_kubernetes_pod_container_name"]
    action = "replace"
    target_label = "container"
  }
  rule {
    source_labels = [
      "__meta_kubernetes_pod_label_app_kubernetes_io_name",
      "__meta_kubernetes_pod_label_app",
      "__meta_kubernetes_pod_label_k8s_app",
    ]
    action = "replace"
    target_label = "app"
    regex = ";*([^;]+);*.*"
  }
}

# Logs
# ----
discovery.relabel "kubernetes_logs" {
  targets = discovery.relabel.common.output

  rule {
    source_labels = ["__meta_kubernetes_pod_label_grafana_agent_collect_logs"]
    action = "keep"
    regex = "true"
  }
}
loki.source.kubernetes "pods" {
  targets    = discovery.relabel.kubernetes_logs.output
  forward_to = [loki.write.local.receiver]
}

loki.write "local" {
  endpoint {
    url = "http://loki-gateway.monitoring.svc.cluster.local/loki/api/v1/push"
    tenant_id = "liveview-template.app"
  }
  external_labels = {
    exporter = "grafana-agent",
  }
}
